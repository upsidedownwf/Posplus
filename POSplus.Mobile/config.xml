<widget id="POSplus.Mobile" version="1.0.0" versionCode="1">
  <name>PowerPOSplus</name>
  <description>Template</description>
  <author email="sales@powersoft-solutions.org" href="http://www.powersoft-solutions.org">Powersoft Integrated Solutions</author>
  <preference name="phonegap-version" value="cli-9.0.0" />
  <content src="index.html" />
  <preference name="StatusBarOverlaysWebView" value="false" />
  <preference name="StatusBarBackgroundColor" value="#00BCD4" />
  <plugin name="cordova-plugin-statusbar" onload="true" />
  <plugin name="cordova-plugin-whitelist" spec="1" /> 
  <allow-navigation href="*" />
  <access origin="*" />
  <allow-intent href="http://*/*" />
  <allow-intent href="https://*/*" />
  <allow-intent href="tel:*" />
  <allow-intent href="sms:*" />
  <allow-intent href="mailto:*" />
  <allow-intent href="geo:*" />
  <platform name="android">
    <allow-intent href="market:*" />
  </platform>
  <platform name="ios">
    <allow-intent href="itms:*" />
    <allow-intent href="itms-apps:*" />
  </platform>
</widget>